@model IEnumerable<string>
<a class="btn btn-block btn-default" 
   asp-action="ListFiltered"
   asp-controller="Home"
   asp-route-category="">
    Home
</a>
@foreach (string category in Model)
{
    <a class="btn btn-block btn-default" 
       asp-action="ListFiltered"
       asp-controller="Home"
       asp-route-category="@category"
       asp-route-page="1">
        @category
    </a>
}
