
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SporthalHuren</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Open+Sans" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather|Roboto+Slab" rel="stylesheet">

    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>

    <div class="main-nav navbar-static-top">
        <div class="container navbar-content">
            <div class="navbar-header">
                <a class="navbar-brand" id="nav-brand" asp-action="Index" asp-controller="Home">
                    <img src="~/images/logo.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (!Context.User.Identity.IsAuthenticated)
                    {                  
                        <li><a asp-action="Login" asp-controller="Account" id="nav-link">Inloggen</a></li>
                    }
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <li><a asp-action="MyAccount" asp-controller="NormalUser" id="nav-link">Account</a></li>
                        <li><a asp-action="MyReservation" asp-controller="NormalUser" id="nav-link">Reserveringen</a></li>
                    }
                    <li><a asp-action="About" asp-controller="Home" id="nav-link">About</a></li>
                    <li><a asp-action="Contact" asp-controller="Home" id="nav-link">Contact</a></li>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <li><a asp-action="Logout" asp-controller="Account" id="nav-link">Uitloggen</a></li>
                    }
                </ul>
            </div>
        </div>

    </div>

    <div class="container body-content">
        <div class="jumbotron custom-jumbotron">
            @RenderBody()
        </div>
        <hr />
        <footer class="text-center">
            <p id="footer-text">&copy; 2017 - SporthalHuren</p>
        </footer>
    </div>
</body>



</html>

