@model IEnumerable<Proprietor>
@{
    ViewData["Title"] = "Proprietor";
    Layout = "_ProprietorLayout";
}

<div class="container text-center content">
    <h1>Bekijk reserveringen</h1>
    <br />
    <form asp-action="GetProprietor" asp-controller="Proprietor" method="post">
        <br />
        <div class="form-group">
            @if (Model.Count() == 0)
            {

                <h4>Geen verhuurders gevonden</h4>
            }
            else
            {
                <select class="form-control" id="CheckReservation" name="SelectedProprietor">
                    @foreach (var p in Model)
                    {
                        <option value=@p.ID>@p.Name</option>

                    }
                </select>
                <br />
                <small id="SportsHelp" class="form-text text-muted">Selecteer een verhuurder</small>
                <div class="form-group">
                    
                    <br />
                    <button type="submit" class="btn-primary btn custom-button2">
                        Selecteer verhuurder
                    </button>
                </div>

            }
            </div>
    </form>
    <br />
</div>