@model  SportsHall

<div class="container content">
    <div class="row">
        <div class="col-lg-12">
            <h3>@Model.Name</h3>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-6">
            <h4>Adres:</h4>
            <p class="custom-text">@Model.StreetName @Model.HouseNumber @Model.City</p>
            <br />
            <h4>Contact:</h4>
            <p class="custom-text">@Model.Phone</p>
            <p class="custom-text">@Model.Proprietor.Email</p>
            <br />
            <h4>Beschrijving van de sporthal:</h4>
            <p class="custom-text">@Model.Description</p>
            <br />
            <h4>Faciliteiten:</h4>
            <ul>
                @foreach (var p in Model.SportsHallFacilities)
            {
                    <li><p class="custom-text">@p.Facility.Name</p></li>
                }
            </ul>
            <br />
        </div>



        <div class="col-lg-6">
            <h4>Openingstijden:</h4>
            @foreach (var s in Model.Times)
            {
                <p class="custom-text">@s.Day @s.TimeOpen tot @s.TimeClose</p>
            }
            <br />
            <h4>Activiteiten:</h4>
            <ul>
                @foreach (var t in Model.SportsHallActivities)
            {
                    <li><p class="custom-text">@t.Activity.Name</p></li>
                }
            </ul>
        </div>
    </div>



    <div class="row container">
        <div class="col-xs-12">
            <form asp-controller="NormalUser" asp-action="CreateBooking" asp-route-sportshallid="@Model.ID" method="get">

                <input type="hidden" value="@Model.ID" name="ID" />
                <input type="submit" class="btn btn-primary custom-button2" value="Nieuwe reservering" />

            </form>
        </div>
    </div>
</div>